<!DOCTYPE html>
<html lang="en">

<head>
  <% include shared/head %>
</head>

<body>
  <% include shared/navbar %>

  <header id="indexHeader" class="jumbotron header">
    <div class="container">
      <h1>API串接示範</h1>
    </div>
  </header>
  <section class="py-3">
    <!-- container -->
    <div class="container">
      <!-- getSuccessOrErrorForm -->
      <form id="getSuccessOrErrorForm" class="my-3 api-form">
        <h2>取得伺服器正確與錯誤訊息範例</h2>
        <div class="form-group">
          <select id="isSuccess" class="form-control">
            <option value="1">觀看成功訊息</option>
            <option value="0">觀看錯誤訊息</option>
          </select>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">發出請求</button>
        </div>
        <pre></pre>
      </form>
      <!-- getSuccessOrErrorForm end -->

      <!-- getTimestampForm -->
      <form id="getTimestampForm" class="my-3 api-form">
        <h2>取得伺服器時間戳記</h2>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">發出請求</button>
        </div>
        <pre></pre>
      </form>
      <!-- getTimestampForm end -->

      <!-- getFormatTimeForm -->
      <form id="getFormatTimeForm" class="my-3 api-form">
        <h2>取得伺服器指定格式時間</h2>
        <div class="form-group">
          <input id="format" type="text" value="YYYYMMDD" class="form-control">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">發出請求</button>
        </div>
        <pre></pre>
      </form>
      <!-- getFormatTimeForm end -->

      <!-- repeatMyStringForm -->
      <form id="repeatMyStringForm" class="my-3 api-form">
        <h2>使伺服器回傳前端寫入的字串</h2>
        <div class="form-group">
          <input id="myString" type="text" class="form-control" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">發出請求</button>
        </div>
        <pre></pre>
      </form>
      <!-- repeatMyStringForm end -->
    </div>
    <!-- container end -->
  </section>
  <% include shared/scripts %>
  <script src="/assets/js/api-demo.js"></script>
</body>

</html>